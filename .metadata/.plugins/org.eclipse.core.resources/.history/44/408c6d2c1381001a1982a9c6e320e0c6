package LeetCode;

public class NextGreaterEle {
	
	    public int[] replaceElements(int[] arr) {
	        int n = arr.length;
	        int max = -1;
	        for (int i = n-1; i >= 0; i--){
	            int temp = arr[i];
	            arr[i] = max;
	            max = Math.max(max, temp);
	            
	        }
	        
	   
			return arr;
	    	}
	    
	    public static void main(String args[]) {
	    	NextGreaterEle a = new NextGreaterEle();
	    	int[] arr = {17,18,5,4,6,1};
	    	a.replaceElements(arr);
	}
}


